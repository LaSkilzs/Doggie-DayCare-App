<% if @errors.present? %>
  <div class="errors">
    <ul>
      <% errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<%end%>

<% if current_user %>
  <div class="container">
    <div class="panel">
      <div class="row">
          <div class="card-body">  
              <%= form_for @dog, :html => {class: "form"}, url: @dogs_path, method: 'PATCH' do |f| %>
              <div class="form-row">
                <div class="form-group col-md-6">
                    <%= f.label :name %> 
                    <%= f.text_field :name, class: "form-control", placeholder: "name"%>
                </div>
                <div class="form-group col-md-6">
                    <%= f.label :age %> 
                    <%= f.number_field :age, min: 1, max: 15, class: "form-control", placeholder: "age"%>
                </div>
                <div class="form-group col-md-6">
                    <%= f.label :breed %> 
                    <%= f.text_field :breed, class: "form-control", placeholder: "breed"%>
                </div>
                <div class="form-group col-md-6">
                    <%= f.label :size %> 
                    <%= f.text_field :size, class: "form-control", placeholder: "size"%>
                </div>
                <div class="form-group col-md-6">
                  <%= f.label :restrictions %> 
                  <%= f.select :restrictions,Dog.restrictions.keys, {}, {class: "form-control"}  %>
                </div>
                  <div class="form-group col-md-6">
                  <%= f.label :friendliness %> 
                  <%= f.select :friendliness,Dog.friendlinesses.keys, {},{class: "form-control"}  %>
                </div>
                <div class="form-group col-md-6">
                    <%= f.label :image %> 
                    <%= f.text_field :image, class: "form-control", placeholder: "image"%>
                </div>
                <div class="form-group col-md-6">
                    <%= f.label :owner_id %> 
                    <%= f.number_field :owner_id, class: "form-control", placeholder: "owner_id",value: current_user.owners[0].id, :disabled => true %>
                </div>
                </div>
                <%= f.submit class: "btn btn-primary"%>
              <% end %>  
          </div>
        </div>
      </div>
    </div>
  <div class="redirects">
  <%= link_to "back", owners_path, class: "mt-3 white-color" %> | <%= link_to "home", root_path, class: "mt-3 white-color"  %>
<% else %>
  <div class="redirects"> 
    <%= link_to "home", root_path %> | 
    <%= link_to 'Log In', login_path %>
  </div> 
<% end %>
