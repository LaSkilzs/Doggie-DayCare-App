<% if current_user %>
  <div class="container">
    <div>
      <h2 class="display-3 well-title all-title">Pet's Show Page</h2>
    </div>
    <div class="panel panel-primary all-title well-title">
      <div class="row  panel--styled">
        <div class="col-md-5">          
          <img class="dog-image"src=<%= @dog.image%> alt="dog"> 
        </div>
        <div class="col-md-7">
          <div class="firma-aciklama card-body">
            <ul class="yacht-info__list space-2">
              <h4 class="display-3"><%= @dog.name%></h4>
              <hr>
              <li><i class="fas fa-bone"></i><span>Age: <%= @dog.age%></span></li>
              <li><i class="fas fa-bone"></i><span>Breed: <%= @dog.breed%></span></li>
              <li><i class="fas fa-bone"></i><span>Size: <%= @dog.size%></span></li>
              <li><i class="fas fa-bone"></i><span>Restrictions:<%= @dog.restrictions%></span></li>
              <li><i class="fas fa-bone"></i><span>Friendliness: <%= @dog.friendliness%></span></li>
              <div>
                <button  type="button" class="btn btn-secondary btn-lg buttons"><%= link_to 'book today', new_appointment_path, class: "mt-3" %></button>
                <button  type="button" class="btn btn-secondary btn-lg buttons"><%= link_to 'view appointment', new_appointment_path, class: "mt-3" %></button>
              </div>
            </ul>
          </div>
        </div>
      </div>  
    </div>
  </div>          

  <% if current_user && current_user.role == "owner" %>
    <p><%= link_to "back", owner_path(current_user.owners[0]), class: "mt-3 white-color" %> | <%= link_to "edit", edit_dog_path(@dog), class: "mt-3 white-color" %> </p>
  <% else %>
    <p><%= link_to "profile", walker_path(current_user.walkers[0]), class: "mt-3 white-color" %> | <%= link_to "all dogs", dogs_path, class: "mt-3 white-color" %> </p>
  <% end %>
<% else %>
  <% redirect(login_path) %>
<% end%>