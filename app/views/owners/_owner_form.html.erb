<% if @errors.present? %>
  <div class="errors">
    <ul>
      <% errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<%end%>

<form>
<%= form_for @owner, url: @owners_path do |f| %>
  <div class="form-row">
    <div class="form-group col-md-6">
       <%= f.label :address %> 
       <%= f.text_field :address, class: "form-control", placeholder: "street"%>
    </div>
    <div class="form-group col-md-6">
       <%= f.label :city %> 
       <%= f.text_field :city, class: "form-control", placeholder: "city"%>
    </div>
    <div class="form-group col-md-6">
       <%= f.label :user_id %> 
       <%= f.text_field :user_id, class: "form-control", placeholder: "user_id"%>
    </div>
   </div>
   <%= f.submit class: "btn btn-primary"%>
  <% end %>
</form>