<% if @errors.present? %>
  <div class="errors">
    <ul>
      <% errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<%end%>

<% if current_user %>
  <div class="container">
    <div class="panel">
      <div class="row">
          <div class="card-body">
          <h3>Welcome, <%=current_user.name%></h3>
              <%= form_for @owner, :html => {class: "form"}, url: @owners_path, method:'PATCH' do |f| %>
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :address %> 
                  <%= f.text_field :address, class: "form-control", placeholder: "street"%>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :city, class: "control-label" %> 
                  <%= f.text_field :city, class:"form-control", placeholder: 'city'%>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :image, class: "control-label" %> 
                  <%= f.text_field :image, class:"form-control", placeholder: 'string w/ jpg/jpeg/png'%>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :user_id, class: "control-label" %> 
                  <%= f.text_field :user_id, class: "form-control", placeholder: '0', value: current_user.id, :disabled => true %> 
                </div>
              </div> 
              <%= f.submit class: "btn btn-success btnform" %> 
              <% end %>   
          </div>
        </div>
      </div>
    </div>
  <div class="redirects">
    <%= link_to "back", login_path, class: "mt-3 white-color"%> | <%= link_to "home", root_path, class: "mt-3 white-color" %>
  </div>
<% else %>
 <div class="redirects">
    <%= link_to "home", root_path %> |
    <%= link_to 'Log In', login_path %>
 </div> 
<% end %>