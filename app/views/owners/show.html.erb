<p><%=current_user%></p>

<div class="container">
  <h1><%= @owner.user.name%></h1>
  <div>Address: <%= @owner.address%></div>
  <div>City: <%= @owner.city%></div>
  <div class="card" style="width: 18rem;">
    <img src=<%= @owner.image%> class="card-img-top" alt="...">
    <div class="card-body"><h5 class="card-text">Furry Friends </h5></div>
      <ul class="list-group list-group-flush">
        <% @owner.dogs.each do |dog| %>
          <li class="list-group-item"><%= link_to dog.name, dog_path(dog) %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <p><%= link_to "back", owners_path, class: "mt-3 white-color"  %>   |  <%= link_to "edit", edit_owner_path(@owner), class: "mt-3 white-color"  %> </p>
</div>


