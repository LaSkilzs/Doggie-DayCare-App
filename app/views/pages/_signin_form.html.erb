<div class="container">
  <h3 class="display-4">Sign In</h3>
    <div class="card card-container signcard">
      <img class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" alt="" /> 
      <p id="profile-name" class="profile-name-card"></p>
      <form class="form-signin">
        <span id="reauth-email" class="reauth-email"></span>
        <input type="email" class="form-control" placeholder="Email address" required autofocus>
        <input type="password" class="form-control" placeholder="Password" required>
        <div id="remember" class="checkbox">
          <label><input type="checkbox" value="remember-me"> Remember me</label>
        </div>
        <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Sign in</button>
      </form>
        <a href="#" class="forgot-password">Forgot the password?</a>
      <div>
        <br>
        <span><strong><%= link_to 'Create New Account', new_user_path %></strong></span>
        <div>
          <%= link_to 'owner', new_owner_path, class: "new-account"%> | 
          <%= link_to 'walker', new_walker_path, class: "new-account"%>
        </div>
      </div>
    </div>
</div>






