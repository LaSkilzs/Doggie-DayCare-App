<% if @errors.present? %>
  <div class="errors">
    <ul>
      <% errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<%end%>

<% if current_user %>
  <div class="container">
    <div class="bg-light">
      <div class="row">
        <div class="card-body">
          <form class="form" role="form" autocomplete="off">     
            <%= form_for @walker, url: @walkers_path do |f| %>
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :age %> 
                <%= f.text_field :age, class: "form-control", placeholder: "age"%>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :own_dog %> 
                <%= f.check_box :own_dog, class: "form-control", placeholder: "own_dog"%>
              </div>
            </div>
            
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :experience %>
                <%= f.select :experience,Walker.experienced.keys, class: "form-control"  %>
              </div>
            </div>
            
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :rating, class: "control-label" %> 
                <%= f.text_field :rating, class:"form-control input-md", name: 'rating', placeholder: '0'%>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :user_id, class: "control-label" %> 
                <%= f.text_field :user_id, class: "form-control input-md", name: 'user_id', placeholder: current_user, value: current_user %> 
              </div>
            </div> 
            <%= f.submit class: "btn btn-success btnform" %> 
            <% end %>   
          </form>
        </div>
      </div>
    </div>
  </div>
  <%= link_to "back", login_path %> | <%= link_to "home", root_path %>
<% else %>
 <div class="redirects"> 
  <%= link_to "home", root_path %> |
  <%= link_to 'Log In', login_path %>
  </div>
<% end %>



